{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "westus2"
        },
        "networkInterfaceName": {
            "type": "string",
            "defaultValue": "testname623"
        },
        "networkSecurityGroupName": {
            "type": "string",
            "defaultValue": "testname-nsg"
        },
        "networkSecurityGroupRules": {
            "type": "array",
            "defaultValue": []
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "default"
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "rg-morrisa-vnet"
        },
        "addressPrefixes": {
            "type": "array",
            "defaultValue": [
                "10.1.5.0/24"
            ]
        },
        "subnets": {
            "type": "array",
            "defaultValue": [
                {
                    "name": "default",
                    "properties": {
                        "addressPrefix": "10.1.5.0/24"
                    }
                }
            ]
        },
        "operatingSystem": {
            "type": "string",
            "defaultValue": "Linux"
        },
        "application": {
            "type": "string",
            "defaultValue": "Application"
        },
        "environment": {
            "type": "string",
            "defaultValue": "Environment"
        },
        "businessUnit": {
            "type": "string",
            "defaultValue": "BusinessUnit"
        },
        "costCenter": {
            "type": "string",
            "defaultValue": "CostCenter"
        },
        "publicIpAddressName": {
            "type": "string",
            "defaultValue": "testname-ip"
        },
        "publicIpAddressType": {
            "type": "string",
            "defaultValue": "Dynamic"
        },
        "publicIpAddressSku": {
            "type": "string",
            "defaultValue": "Basic"
        },
        "virtualMachineName": {
            "type": "string",
            "defaultValue": "testname"
        },
        "virtualMachineRG": {
            "type": "string",
            "defaultValue": "rg-morrisa"
        },
        "osDiskType": {
            "type": "string",
            "defaultValue": "StandardSSD_LRS"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D2_v3"
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "psjhadm"
        },
        "virtualMachineAdminPassword": {
            "type": "securestring",
            "defaultValue": null
        },
        "diagnosticsStorageAccountName": {
            "type": "string",
            "defaultValue": "rgmorrisadiag"
        },
        "diagnosticsStorageAccountId": {
            "type": "string",
            "defaultValue": "Microsoft.Storage/storageAccounts/rgmorrisadiag"
        },
        "diagnosticsStorageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS"
        },
        "diagnosticsStorageAccountKind": {
            "type": "string",
            "defaultValue": "Storage"
        }
    },
    "variables": {
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]",
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]"
    },
    "resources": [
        {
            "name": "[parameters('networkInterfaceName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "tags": {
                "Application": "[parameters('application')]",
                "Environment": "[parameters('environment')]",
                "BusinessUnit": "[parameters('businessUnit')]",
                "CostCenter": "[parameters('costCenter')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', parameters('publicIpAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            }
        },
        {
            "name": "[parameters('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-02-01",
            "location": "[parameters('location')]",
            "tags": {
                "Application": "[parameters('application')]",
                "Environment": "[parameters('environment')]",
                "BusinessUnit": "[parameters('businessUnit')]",
                "CostCenter": "[parameters('costCenter')]"
            },
            "properties": {
                "securityRules": "[parameters('networkSecurityGroupRules')]"
            }
        },
        {
            "name": "[parameters('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-04-01",
            "location": "[parameters('location')]",
            "tags": {
                "Application": "[parameters('application')]",
                "Environment": "[parameters('environment')]",
                "BusinessUnit": "[parameters('businessUnit')]",
                "CostCenter": "[parameters('costCenter')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[parameters('addressPrefixes')]"
                },
                "subnets": "[parameters('subnets')]"
            }
        },
        {
            "name": "[parameters('publicIpAddressName')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2019-02-01",
            "location": "[parameters('location')]",
            "tags": {
                "Application": "[parameters('application')]",
                "Environment": "[parameters('environment')]",
                "BusinessUnit": "[parameters('businessUnit')]",
                "CostCenter": "[parameters('costCenter')]"
            },
            "properties": {
                "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
            },
            "sku": {
                "name": "[parameters('publicIpAddressSku')]"
            }
        },
        {
            "name": "[parameters('virtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "tags": {
                "Application": "[parameters('application')]",
                "Environment": "[parameters('environment')]",
                "BusinessUnit": "[parameters('businessUnit')]",
                "CostCenter": "[parameters('costCenter')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceName'))]",
                "[concat('Microsoft.Storage/storageAccounts/', parameters('diagnosticsStorageAccountName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('osDiskType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "RedHat",
                        "offer": "RHEL",
                        "sku": "7.3",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('virtualMachineAdminPassword')]"
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', parameters('diagnosticsStorageAccountName'), '.blob.core.windows.net/')]"
                    }
                }
            }
        },
        {
            "name": "[parameters('diagnosticsStorageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "tags": {
                "Application": "[parameters('application')]",
                "Environment": "[parameters('environment')]",
                "BusinessUnit": "[parameters('businessUnit')]",
                "CostCenter": "[parameters('costCenter')]"
            },
            "properties": {},
            "kind": "[parameters('diagnosticsStorageAccountKind')]",
            "sku": {
                "name": "[parameters('diagnosticsStorageAccountType')]"
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}
